tarxf http://www.kernel.org/pub/linux/utils/boot/syslinux/ syslinux-4.03 .tar.bz2

sed -i '/#define statfs/d;/#undef statfs/d' libinstaller/linuxioctl.h

make -C libinstaller
make -C extlinux OPTFLAGS="-g -Os -D_GNU_SOURCE"

cp extlinux/extlinux /bin
mkdir -p /lib/syslinux
cp mbr/*mbr.bin /lib/syslinux
